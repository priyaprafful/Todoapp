div.info-container

  div.info-content
    img.arrow-black(src=slice.primary.icon_black.url,alt=slice.primary.icon_black.alt)
    img.arrow-white(src=slice.primary.icon_white.url,alt=slice.primary.icon_white.alt)
    div.info-title
      != ctx.prismicDom.RichText.asHtml(slice.primary.info_title,ctx.linkresolver)
    div.info-text 
      h6 !{ ctx.prismicDom.RichText.asText(slice.primary.info_text) }

  div.info-desc
    != ctx.prismicDom.RichText.asHtml(slice.primary.info_desc,ctx.linkresolver)