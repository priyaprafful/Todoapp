if (slice.primary.mesh_side)
    -var sectionimage = "full_width_image-" + slice.primary.mesh_side
else
    -var sectionimage = "full_width_image-right"

div.imagecontent.clearfix    
    section.content-section(class=sectionimage)
      img.image1(src=slice.primary.background_image.url)
    section.content-section
      img.image2(src=slice.primary.image_black.url)
      img.image3(src=slice.primary.image_white.url)