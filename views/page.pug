extends ./body

block body
  edit-link(data-wio-id=prismicResponse.id)

  div.container
    for slice in prismicResponse.data.page_content
      case slice.slice_type
        when "call_to_action"
          include ./slices/call-to-action
        when 'full_width_image'
          include ./slices/full-width-image
        when "icon_info_section"
          include ./slices/icon-info-section
        when 'image_info_section'
          include ./slices/image-info-section
        when 'email_signup'
          include ./slices/email-signup